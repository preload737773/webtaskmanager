{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "outDir": "../dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "types": ["jquery", "bootstrap"],
    "lib": ["es2018", "dom"]
  },
  "include": ["**/*.ts"]
}
